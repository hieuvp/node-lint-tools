{
  "scripts": {
    "clean": "rm -rf package-lock.json node_modules lerna-debug.log && lerna run clean",
    "postinstall": "lerna bootstrap",
    "lint": "run lint runfile.js packages/**/src",
    "lint:fix": "run lint --fix runfile.js packages/**/src",
    "test": "jest packages/**/src",
    "test:updateSnapshot": "jest --updateSnapshot packages/**/src",
    "test:ci": "jest --bail --ci packages/**/src"
  },
  "devDependencies": {
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "runjs": "^4.3.2"
  }
}
